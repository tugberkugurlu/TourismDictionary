<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Bundle("~/assets/css/global")" rel="stylesheet" type="text/css" />
    <script src="@Url.Bundle("~/assets/js/modernizr")"></script>
</head>
<body>
    <div class="container-fluid">@*container*@
        <div class="row-fluid">
            <div class="span12">
                @RenderBody()
            </div>
        </div>

        <hr />

        <footer>
            <p>&copy; <a href="http://www.tugberkugurlu.com">Tugberk Ugurlu</a> @DateTime.Today.Year</p>
        </footer>
    </div>
    <script src="@Url.Bundle("~/assets/js/global")"></script>
    @RenderSection("scripts", false)
</body>
</html>